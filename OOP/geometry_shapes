class RectangularPrism:
    def __init__(self, length, width, height):
        self.length = length
        self.width = width
        self.height = height

    def base_area(self):
        area = self.length * self.width
        return area
    
    def volume(self):
        volume = self.length * self.width * self.height
        return volume
    
    def __str__(self):
        return f"Prism: {self.length} x {self.width} x {self.height}"
    

if __name__ == "__main__":
    # Example usage
    box = RectangularPrism(10.0, 5.0, 2.0)
    print(box)
    print(f"Base Area: {box.base_area()}")
    print(f"Volume: {box.volume()}")