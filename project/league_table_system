def compute_table(matches):
    """
    Compute the league table from a list of match results.

    Args:
        matches (list of dict): Each dict represents a match with keys:
            - "home" (str): home team name
            - "away" (str): away team name
            - "home_goals" (int): goals scored by home team
            - "away_goals" (int): goals scored by away team

    Returns:
        list of Team: Sorted list of Team objects according to league rules:
            1. Points (descending)
            2. Goal difference (descending)
            3. Goals for (descending)
            4. Team name (alphabetical ascending)
    """
    data = {}
    for game in matches:
        home = game["home"]
        away = game["away"]
        if home not in data:
            data[home] = Team(home)
        if away not in data:
            data[away] = Team(away)

    for game in matches:
        home = game["home"]
        away = game["away"]

        data[home].played += 1
        data[away].played += 1

        data[home].gf += game["home_goals"]
        data[away].gf += game["away_goals"]

        data[home].ga += game["away_goals"]
        data[away].ga += game["home_goals"]

        if game["home_goals"] > game["away_goals"]:
            data[home].won += 1
            data[away].lost += 1
        elif game["home_goals"] == game["away_goals"]:
            data[home].drawn += 1
            data[away].drawn += 1
        elif game["home_goals"] < game["away_goals"]:
            data[home].lost += 1
            data[away].won += 1

    team_list = list(data.values())

    sort_team_list = sorted(
        team_list,
        key=lambda t: (
        -t.points(),
        -t.goal_difference(),
        -t.gf,
        t.name))

    return sort_team_list

class Team:
    """
    name(str): Team name
        played(int): Games played
        won(int): Games won
        drawn(int): Games drawn
        lost(int): Games lost
        gf(int): Goals for
        ga(int): Goals against
    """

    def __init__(self, name):
        """
        Initialize a new Team with all statistics set to zero.

        Args:
            name (str): The name of the team
        """
        self.name = name
        self.played = 0
        self.won = 0
        self.drawn = 0
        self.lost = 0
        self.gf = 0
        self.ga = 0

    def goal_difference(self):
        """Return goal difference (goals for - goals against)."""
        return self.gf - self.ga

    def points(self):
        """Return points (3 for Win, 1 for Draw, 0 for Loss)."""
        return 3 * self.won + self.drawn

    def __repr__(self):
        """
        Return a string representation of the Team object, including all stats.

        Returns:
            str: Representation of the team
        """

        return (
            f"Team(name='{self.name}', played={self.played}, won={self.won}, "
            f"drawn={self.drawn}, lost={self.lost}, gf={self.gf}, ga={self.ga}, "
            f"points={self.points()})"
            )


matches = [
    {"home": "Lions", "away": "Snakes", "home_goals": 3, "away_goals": 0},
    {"home": "Tarantulas", "away": "FC Awesome", "home_goals": 1, "away_goals": 0},
    {"home": "Lions", "away": "FC Awesome", "home_goals": 1, "away_goals": 1},
    {"home": "Tarantulas", "away": "Snakes", "home_goals": 3, "away_goals": 1},
    {"home": "Lions", "away": "Tarantulas", "home_goals": 0, "away_goals": 1}
]
print(compute_table(matches))

            